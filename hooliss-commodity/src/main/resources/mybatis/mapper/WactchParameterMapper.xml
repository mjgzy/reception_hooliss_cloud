<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xfkj.mapper.commodity.WatchParameterMapper">
    <select id="findWatchParameter" resultType="watchParameter">
        SELECT * FROM watch_parameter   where 1 = 1
            AND `watch_id` = #{watch_id}
    </select>
    <select id="findWatchParameterAll" resultType="watchParameter">
         SELECT p.* FROM `tb_watchs` w  INNER JOIN `watch_parameter` p ON p.`parameter_id` = w.`wp_Id` where 1 = 1
    </select>

    <update id="updateWatchId">
        update `watch_parameter` set watch_id=#{watch_id} where parameter_id=#{parameter_id}
    </update>
</mapper>